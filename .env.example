# Development Environment Variables for Web App
# Copy this file to .env.local for local development

# Next.js Development Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Hot Reload Settings
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true
FAST_REFRESH=true

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-secret-key

# External Services (Development)
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# Crossmint Configuration
NEXT_PUBLIC_CROSSMINT_CLIENT_ID=your-crossmint-client-id
NEXT_PUBLIC_CROSSMINT_CLIENT_SECRET=your-crossmint-client-secret
NEXT_PUBLIC_CROSSMINT_TOKEN_URL=https://www.crossmint.com/api/v1-alpha2/session/auth/token
NEXT_PUBLIC_CROSSMINT_VERIFICATION_URL=https://www.crossmint.com/api/v1-alpha2/users

# Development Features
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_DEBUG_MODE=true 